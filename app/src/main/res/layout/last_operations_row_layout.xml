<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_last_oper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:background="@color/teal_200"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/text_type_oper"
            style="@style/txt_last_oper"
            android:layout_weight="1"
            tools:text="type" />

        <TextView
            android:id="@+id/text_who_do"
            style="@style/txt_last_oper"
            android:layout_weight="1"
            tools:text="who do" />

        <TextView
            android:id="@+id/text_who_to_do"
            style="@style/txt_last_oper"
            android:layout_weight="1"
            tools:text="who to do" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/text_time_oper"
            style="@style/txt_last_oper"
            android:layout_weight="1"
            tools:text="3:20 PM 15-1-2022" />


    </LinearLayout>

</LinearLayout>