<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            android:scrollbarSize="@dimen/_20sdp"
            android:src="@drawable/cover_login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_60sdp"
            android:text="@string/welcome"
            android:textColor="@color/white"
            android:textSize="@dimen/_39sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/please_sign_up"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp"
            app:layout_constraintEnd_toEndOf="@+id/textView9"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_425sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_3sdp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/login_txt_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_32sdp"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:text="@string/login"
                        android:textColor="@color/unuse_color"
                        android:textSize="@dimen/_15sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:background="@drawable/devid_log"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="@+id/login_txt_sign"
                        app:layout_constraintStart_toStartOf="@+id/login_txt_sign"
                        app:layout_constraintTop_toBottomOf="@+id/login_txt_sign" />

                    <View
                        android:id="@+id/divider6"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:background="@drawable/devid_log"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="@+id/txt_sign_up_log"
                        app:layout_constraintStart_toStartOf="@+id/txt_sign_up_log"
                        app:layout_constraintTop_toBottomOf="@+id/txt_sign_up_log" />

                    <TextView
                        android:id="@+id/txt_sign_up_log"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_24sdp"
                        android:text="@string/sign_up"
                        android:textSize="@dimen/_15sdp"
                        app:layout_constraintStart_toEndOf="@+id/login_txt_sign"
                        app:layout_constraintTop_toTopOf="parent" />


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_name_TF"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_26sdp"
                        android:layout_marginTop="@dimen/_17sdp"
                        android:layout_marginEnd="@dimen/_26sdp"
                        android:background="@drawable/edittext_radius"
                        android:drawableStart="@drawable/ic_baseline_person_24"
                        android:drawablePadding="@dimen/_7sdp"
                        android:hint="@string/user_name"
                        android:padding="@dimen/_11sdp"
                        android:textAlignment="viewStart"
                        android:textColorHint="#757575"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/login_txt_sign" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_phone"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_26sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_26sdp"
                        android:drawablePadding="@dimen/_7sdp"
                        android:padding="@dimen/_11sdp"
                        android:inputType="phone"
                        android:hint="@string/phone"
                        android:background="@drawable/edittext_radius"
                        android:drawableStart="@drawable/ic_phone"
                        android:textAlignment="viewStart"
                        android:textColorHint="#757575"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/user_name_TF"
                        tools:ignore="TextContrastCheck" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_email_address"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_26sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_26sdp"
                        android:drawablePadding="@dimen/_7sdp"
                        android:padding="@dimen/_11sdp"
                        android:autofillHints=""
                        android:background="@drawable/edittext_radius"
                        android:drawableStart="@drawable/ic_baseline_email_24"
                        android:hint="@string/email_adress"
                        android:inputType="textEmailAddress"
                        android:textAlignment="viewStart"
                        android:textColorHint="#757575"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/edit_phone" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password_sign"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_26sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_26sdp"
                        android:drawablePadding="@dimen/_7sdp"
                        android:padding="@dimen/_11sdp"
                        android:background="@drawable/edittext_radius"
                        android:drawableStart="@drawable/ic_baseline_lock_24"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                        android:textAlignment="viewStart"
                        android:textColorHint="#757575"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/et_email_address" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Confirm_Password_TF"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_26sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:layout_marginEnd="@dimen/_26sdp"
                        android:drawablePadding="@dimen/_7sdp"
                        android:padding="@dimen/_11sdp"
                        android:background="@drawable/edittext_radius"
                        android:drawableStart="@drawable/ic_baseline_lock_24"
                        android:hint="@string/confirm_password"
                        android:inputType="textPassword"
                        android:textAlignment="viewStart"
                        android:textColorHint="#757575"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/password_sign" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="@string/text_log"
                        android:textSize="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="@+id/Confirm_Password_TF"
                        app:layout_constraintStart_toStartOf="@+id/Confirm_Password_TF"
                        app:layout_constraintTop_toBottomOf="@+id/Confirm_Password_TF" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="@string/terms_conditions"
                        android:textColor="#DD2C00"
                        app:layout_constraintEnd_toEndOf="@+id/textView15"
                        app:layout_constraintStart_toStartOf="@+id/textView15"
                        app:layout_constraintTop_toBottomOf="@+id/textView15" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_gravity="center|bottom"
                android:layout_margin="@dimen/_5sdp"
                android:background="@color/black"
                android:elevation="@dimen/_4sdp"
                app:cardCornerRadius="@dimen/_40sdp"
                app:cardElevation="@dimen/_3sdp">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/sign_float"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="TODO"
                    android:maxWidth="@dimen/_40sdp"
                    android:maxHeight="@dimen/_40sdp"
                    android:src="@drawable/ic_arrow_forward"
                    app:backgroundTint="@color/orange"
                    app:tint="@color/white"
                    tools:ignore="ImageContrastCheck,DuplicateSpeakableTextCheck" />
            </com.google.android.material.card.MaterialCardView>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>