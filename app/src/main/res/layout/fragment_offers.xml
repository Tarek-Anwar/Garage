<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.OffersFragment">

    <ImageView
        android:id="@+id/image_offers_frggment"
        android:layout_width="346dp"
        android:layout_height="339dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/offer_crisimis" />

    <TextView
        android:id="@+id/txt_offer_detils"
        android:layout_width="317dp"
        android:layout_height="149dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.394"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_offers_frggment"
        app:layout_constraintVertical_bias="0.379"
        tools:text="Special offer 40% off on the occasion of New Year's Eve on all Cairo financier garages" />
</androidx.constraintlayout.widget.ConstraintLayout>