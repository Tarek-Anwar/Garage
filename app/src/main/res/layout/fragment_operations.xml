<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    app:layoutDescription="@xml/fragment_operations_scene"
    tools:context=".home.OperationsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <TextView
            style="@style/txt_detils_oper"
            android:text="@string/type_op"
            android:textColor="#004D40" />

        <TextView
            android:id="@+id/type_oper_txt"
            style="@style/txt_detils_oper"
            android:textColor="#004D40"
            tools:text="Accpet" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/txt_detils_oper"
            android:text="@string/from"
            android:textColor="#004D40" />

        <TextView
            android:id="@+id/from_oper_txt"
            style="@style/txt_detils_oper"
            android:text="@string/me"
            android:textColor="#004D40"
            tools:text="@string/me" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/txt_detils_oper"
            android:text="@string/to"
            android:textColor="#004D40" />

        <TextView
            android:id="@+id/to_oper_txt"
            style="@style/txt_detils_oper"
            android:text="@string/me"
            android:textColor="#004D40"
            tools:text="@string/app_name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/txt_detils_oper"
            android:text="@string/time"
            android:textColor="#004D40" />

        <TextView
            android:id="@+id/time_oper_txt"
            style="@style/txt_detils_oper"
            android:text="@string/me"
            android:textColor="#004D40"
            tools:text="3:00 PM 15-1-2022" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/txt_detils_oper"
            android:text="@string/price"
            android:textColor="#004D40" />

        <TextView
            android:id="@+id/price_oper_txt"
            style="@style/txt_detils_oper"
            android:text="@string/me"
            android:textColor="#004D40"
            tools:text="20.00 EG" />


    </LinearLayout>


</LinearLayout>